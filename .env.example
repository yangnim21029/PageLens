# PageLens Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000

# WordPress API Configuration (Optional)
WP_ARTICLE_SEO_URL=https://article-api.presslogic.com/v1/articles/getArticleSEO
WP_TIMEOUT=30000
WP_RETRY_ATTEMPTS=3
WP_RETRY_DELAY=2000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_CORS=true
ENABLE_LOGGING=true

# Vercel Specific (automatically set by Vercel)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app