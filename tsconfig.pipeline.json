{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": false
  },
  "include": [
    "src/app/**/*",
    "src/routes/**/*",
    "src/middleware/**/*",
    "src/services/**/*",
    "src/config/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/index.ts",
    "src/server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/frontend/**/*",
    "src/legacy/**/*",
    "src/__tests__/**/*"
  ]
}